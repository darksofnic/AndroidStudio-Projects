<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RBDesign" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#64dd17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="MenuDesign" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">#000</item>
    </style>

</resources>
